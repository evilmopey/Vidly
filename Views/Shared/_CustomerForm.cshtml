@model Vidly.ViewModels.CustomerFormViewModel

@if(Model.Customer.Id == 0)
{
    <h2>New Customer</h2>
}
<form method="post" asp-controller="Customer" asp-action="Save" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger" ></div>
    <input asp-for="Customer.Id" hidden/>
    <div class="form-group">
        <label asp-for="Customer.Name"></label>
        <input asp-for="Customer.Name" class="form-control" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.DateTime"></label>
        <input type="datetime" asp-for="Customer.DateTime" class="form-control" />
        <span asp-validation-for="Customer.DateTime" class="text-danger"></span>
    </div>
    <div class="checkbox">
        <label asp-for="Customer.IsSubcribedToNewsLetter"></label>
        <input type="checkbox" asp-for="Customer.IsSubcribedToNewsLetter" class="" />
        <span asp-validation-for="Customer.IsSubcribedToNewsLetter" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.MembershipTypeId"></label>
        <select asp-for="Customer.MembershipTypeId" asp-items="@Model.MembershipTypes" class="form-control ">
            <option disabled selected>--Select Membershiptype--</option>
        </select>
        <span asp-validation-for="Customer.MembershipTypeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Submit</button>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

